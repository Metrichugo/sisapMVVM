<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="incidence"
            type="com.telcel.gsa.sisap.ui.network.Incidence" />
    </data>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_margin"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            app:cardElevation="@dimen/cardview_default_elevation">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/id_incidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@{incidence.idIncidence}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="000001"/>
                <TextView
                    android:id="@+id/incidence_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@{incidence.status}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Clasificar"/>
                <View
                    android:id="@+id/division_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/id_incidence"
                    app:layout_constraintBottom_toTopOf="@id/incidence_title"/>
                <TextView
                    android:id="@+id/incidence_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@{incidence.title}"
                    android:textAllCaps="true"
                    app:layout_constraintTop_toBottomOf="@id/division_line"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="TITULO INCIDENCIA"/>
                <TextView
                    android:id="@+id/incidence_creation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@{incidence.creationDate}"
                    app:layout_constraintTop_toBottomOf="@id/incidence_title"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="01/01/1990"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</layout>