<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_dark</item>
        <item name="colorOnPrimary">@color/color_on_primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_dark</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/color_on_secondary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--CardView Styles-->
    <style name="TextAppearance.Title.Cardview" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_secondary_dark</item>
    </style>

    <style name="TextAppearance.Body.Cardview" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:capitalize">sentences</item>
    </style>

    <!--Default Styles-->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>